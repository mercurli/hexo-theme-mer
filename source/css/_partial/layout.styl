/**
	layout
*/
.container
	width: 1200px;
	margin: auto;

.header
	box-shadow: 0 0 0.5em 0 rgba(161,177,204,0.325);
	position: fixed;
	top: 0;
	width:100%;
	background: rgba(255,255,255,.95);
	.nav
		display: inline-block;
		.nav-item
			display: inline-block;
			height: header-height;
			padding: 0 15px;
			line-height: header-height;
			color: #999;
			&:hover
				color: #e59dc4;

.avatar
	float: right;
	height: header-height;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	-webkit-flex-direction: column;
	-moz-flex-direction: column;
	-ms-flex-direction: column;
	-o-flex-direction: column;
	flex-direction: column;
	justify-content: center;
	img
		width: 50px;
		height: 50px;
		border-radius: 50%;
		&:hover
			cursor: pointer;

.main
	background-color: #f2f5fa;
	margin-top: header-height;
	.container
		display: -webkit-flex;
		display: -moz-flex;
		display: -ms-flex;
		display: -o-flex;
		display: flex;
		padding: 30px 0;

.content
	width: 72.4%;
	margin: 0 0.8%;
.sidebar
	width: 24.4%;
	margin: 0 0.8%;

.footer
	height: footer-height;
	box-sizing: border-box;
	background: black;
	color: #bbb;
	padding-top: 20px;
	a
		color: #ddd;
		&:hover
			color: white;
