/**
	archive
*/
.achive-item
	padding: 20px;

.achive-year
	color: #888;
	font-size: 24px;
	margin-bottom: 16px
	font-weight: bolder;

.achive-article
	border-bottom: 1px solid #eee;
	padding: 10px 0 20px;
	.achive-article-title
		font-size: 16px;
		margin-bottom:15px;
		a
			&:hover
				color: #e59dc4;
	.achive-article-meta
		font-size: 12px;
					
		.achive-article-tag
			display: inline-block;
			margin: 0 5px;
			color: #555;
			&:hover
				color: black;
