/**
	aside
*/
.widget
	box-shadow: 0 2px 2px 0 rgba(0,0,0,.1), 0 1px 5px 0 rgba(0,0,0,.1);
	background-color: #fff;
	margin-bottom: 30px;
	.widget-header
		padding: 15px;
		font-size: 16px;
	.widget-content
		padding: 15px;
		border-top: 1px solid #ddd;

.tag-wrap
	.tag
		font-size: 12px;
		color: #777;

.tag-list
	.tag-list-item
		display: inline-block;
		margin: 8px 4px;
		.tag-list-link
			color: white;
			background: #22AAEE;
			text-shadow: 0 1px 1px #6A93AD;
			padding: 5px 10px;
			&:hover
				background: #1d97d4;

.widget-info
	color: #555;
	.iconfont
		font-size: 18px;