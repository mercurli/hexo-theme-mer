/**
	base
*/
ul
	padding: 0;
	li
		list-style-type: none;
figure
	margin: 1em;
pre 
	font-family: inherit;
h1
	font-size: 1.7em;
	margin: .5em 0;
table
	border-spacing: 1px;
img
	max-width: 100%;
a
	text-decoration: none;
	color: #555;

body 
	margin: 0;
	font-size: 14px;
	font-family: -apple-system, Helvetica Neue, PingFang SC, Microsoft YaHei, sans-serif;
	line-height: 1.6;
	color: #454545;

